<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     СПЕЦИАЛЬНЫЕ КОНТРОЛЫ                        -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ProgressRing (анимированный индикатор загрузки) -->
    <Style x:Key="ProgressRingStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Image Source="/MigApp;component/Images/loading.png"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                        From="0" To="360" Duration="0:0:1.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     СПЕЦИАЛЬНЫЕ СТИЛИ ФИЛЬТРОВ                  -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Контейнер фильтра -->
    <Style x:Key="FilterContainer" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="1" 
                                Opacity="0.3"
                                Color="{DynamicResource ShadowColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Кнопка активации фильтра -->
    <Style x:Key="FilterToggleButton" TargetType="ToggleButton">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Filter" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Фильтр"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     СПЕЦИАЛЬНЫЕ ВИЗУАЛЬНЫЕ ЭФФЕКТЫ              -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Эффект для подсветки активного элемента -->
    <Style x:Key="ActiveItemHighlight" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 2"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <!-- Эффект "карточки" -->
    <Style x:Key="CardEffect" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource LightBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="1" 
                                Opacity="0.15"
                                Color="{DynamicResource ShadowColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Эффект затемнения окна -->
    <Style x:Key="BlindfallOverlayStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource OverlayBrush}" />
        <Setter Property="Opacity" Value="0.35" />
        <Setter Property="Visibility" Value="Collapsed" />
    </Style>

</ResourceDictionary>