<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:controls="clr-namespace:MigApp.CustomElements">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     БАЗОВЫЕ СТИЛИ ФОРМ                          -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Контейнер для групп элементов формы -->
    <Style x:Key="FormGroupContainer" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource LightBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0 0 0 16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" 
                                Opacity="0.15" 
                                ShadowDepth="2"
                                Color="{DynamicResource ShadowColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Заголовок группы элементов -->
    <Style x:Key="FormGroupHeader" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0 0 0 8"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     ТЕКСТОВЫЕ ПОЛЯ                              -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Базовый стиль TextBox -->
    <Style x:Key="BaseTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Padding" Value="0 8 0 8"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
        <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="0 0 0 0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="0 0 0 16"/>
    </Style>

    <!-- Стиль для полей ввода с размером шрифта 20 -->
    <Style x:Key="TextBox20" TargetType="TextBox" BasedOn="{StaticResource BaseTextBox}">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <!-- Стиль для полей ввода с размером шрифта 14 -->
    <Style x:Key="TextBox14" TargetType="TextBox" BasedOn="{StaticResource BaseTextBox}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Поле ввода для логина -->
    <Style x:Key="LoginTextBox" TargetType="TextBox" BasedOn="{StaticResource TextBox20}">
        <Setter Property="Width" Value="260"/>
        <Setter Property="MaxLength" Value="20"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     ПОЛЯ ПАРОЛЯ                                 -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Базовый стиль PasswordBox -->
    <Style x:Key="BasePasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Padding" Value="0 8 0 8"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="0 0 0 16"/>
    </Style>

    <!-- Поле пароля для логина -->
    <Style x:Key="LoginPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource BasePasswordBox}">
        <Setter Property="Width" Value="260"/>
        <Setter Property="MaxLength" Value="20"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     COMBOBOX И LISTBOX                          -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Базовый стиль ComboBox -->
    <Style x:Key="BaseComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Padding" Value="0 8 0 8"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="0 0 0 16"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItem}">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    <Setter Property="Background" Value="{DynamicResource LightBackgroundBrush}"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для фильтров -->
    <Style x:Key="FilterComboBox" TargetType="ComboBox" BasedOn="{StaticResource BaseComboBox}">
        <Setter Property="Width" Value="300"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     CHECKBOX И RADIOBUTTON                      -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Базовый стиль CheckBox -->
    <Style x:Key="BaseCheckBox" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Margin" Value="0 8 0 16"/>
    </Style>

    <!-- CheckBox для логина (запомнить меня) -->
    <Style x:Key="LoginCheckBox" TargetType="CheckBox" BasedOn="{StaticResource BaseCheckBox}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Стиль RadioButton -->
    <Style x:Key="BaseRadioButton" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignRadioButton}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Margin" Value="0 8 16 8"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     DATE PICKER И ДРУГИЕ                        -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Стиль DatePicker -->
    <Style x:Key="BaseDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0 0 0 16"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     КАСТОМНЫЕ КОНТРОЛЫ                          -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Стиль для SearchBox -->
    <!--<Style x:Key="SearchTextBox" TargetType="controls:SearchBox" BasedOn="{StaticResource BaseTextBox}">
        <Setter Property="Width" Value="300"/>
        <Setter Property="materialDesign:TextFieldAssist.PrefixText" Value="Поиск:"/>
        <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
    </Style>-->

</ResourceDictionary>