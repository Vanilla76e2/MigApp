<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                      ОСНОВНАЯ ПАЛИТРА                           -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Акцентный цвет (оранжевый) -->
    <Color x:Key="PrimaryColor">#FF9700</Color>

    <!-- Фоновые цвета -->
    <Color x:Key="DarkBackgroundColor">#252525</Color>
    <Color x:Key="MediumBackgroundColor">#383838</Color>
    <Color x:Key="LightBackgroundColor">#424242</Color>
    <Color x:Key="LighterBackgroundColor">#505050</Color>
    <Color x:Key="LightestBackgroundColor">#525252</Color>

    <!-- Текст -->
    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">DarkGray</Color>
    <Color x:Key="DisabledTextColor">Gray</Color>

    <!-- Элементы интерфейса -->
    <Color x:Key="BorderColor">#323232</Color>
    <Color x:Key="HoverColor">#525252</Color>
    <Color x:Key="PressedColor">#3D3D3D</Color>

    <!-- Тени -->
    <Color x:Key="ShadowColor">#252525</Color>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                       КИСТИ (BRUSHES)                           -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Акцентные кисти -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryColor}" Opacity="0.7"/>

    <!-- Фоновые кисти -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="MediumBackgroundBrush" Color="{StaticResource MediumBackgroundColor}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="{StaticResource LighterBackgroundColor}"/>

    <!-- Текстовые кисти -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- Служебные кисти -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>

    <!-- Тени -->
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                  ДОПОЛНИТЕЛЬНЫЕ РЕСУРСЫ                         -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Для MaterialDesign -->
    <SolidColorBrush x:Key="MaterialDesignBackground" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{StaticResource MediumBackgroundColor}"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="{StaticResource LightBackgroundColor}"/>

</ResourceDictionary>