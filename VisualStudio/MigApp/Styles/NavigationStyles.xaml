<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     ЛЕВАЯ ПАНЕЛЬ НАВИГАЦИИ                     -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Стиль левой панели -->
    <Style x:Key="LeftNavigationPanel" TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource DarkBackgroundBrush}"/>
        <Setter Property="Width" Value="60"/>
    </Style>

    <!-- Контейнер кнопок вверху панели -->
    <Style x:Key="LeftPanelTopButtons" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0 20 0 0"/>
    </Style>

    <!-- Контейнер кнопок внизу панели -->
    <Style x:Key="LeftPanelBottomButtons" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0 0 0 15"/>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     КНОПКИ ЛЕВОЙ ПАНЕЛИ                       -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Базовый стиль кнопки левой панели для обычных кнопок -->
    <Style x:Key="LeftPanelButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionButton}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="ToolTipService.Placement" Value="Right"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Базовый стиль для ToggleButton левой панели -->
    <Style x:Key="LeftPanelToggleButtonBase" TargetType="ToggleButton">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="ToolTipService.Placement" Value="Right"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Background"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"/>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Opacity="0.7"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Background" Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Background" Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Специализированные кнопки -->
    <Style x:Key="MenuToggleButton" TargetType="ToggleButton" BasedOn="{StaticResource LeftPanelToggleButtonBase}">
        <Setter Property="ToolTip" Value="Главное меню"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Menu" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FavoriteButton" TargetType="Button" BasedOn="{StaticResource LeftPanelButton}">
        <Setter Property="ToolTip" Value="Избранное"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Star" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AdminToggleButton" TargetType="ToggleButton" BasedOn="{StaticResource LeftPanelToggleButtonBase}">
        <Setter Property="ToolTip" Value="Администрирование"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="ShieldAccount" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ArchiveToggleButton" TargetType="ToggleButton" BasedOn="{StaticResource LeftPanelToggleButtonBase}">
        <Setter Property="ToolTip" Value="Архив"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Archive" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="HelpButton" TargetType="Button" BasedOn="{StaticResource LeftPanelButton}">
        <Setter Property="ToolTip" Value="Справка (F1)"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RefreshButton" TargetType="Button" BasedOn="{StaticResource LeftPanelButton}">
        <Setter Property="ToolTip" Value="Обновить (F5)"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LogoutButton" TargetType="Button" BasedOn="{StaticResource LeftPanelButton}">
        <Setter Property="ToolTip" Value="Выход"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Logout" Width="24" Height="24"/>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     ВЫДВИЖНЫЕ ПАНЕЛИ МЕНЮ                     -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Стиль контейнера выдвижной панели -->
    <Style x:Key="NavigationPanelContainer" TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="Width" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Стиль выдвижной панели -->
    <Style x:Key="NavigationPanel" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8 0 0 8"/>
        <Setter Property="Width" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20" 
                                ShadowDepth="1" 
                                Opacity="0.6"
                                Color="{DynamicResource ShadowColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--                     ЭЛЕМЕНТЫ МЕНЮ НАВИГАЦИИ                   -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- Стиль вкладок меню -->
    <Style x:Key="NavigationTabControl" TargetType="TabControl">
        <Setter Property="TabStripPlacement" Value="Left"/>
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Стиль заголовка вкладки -->
    <Style x:Key="NavigationTabItem" TargetType="TabItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid>
                        <Border x:Name="Border" 
                                Background="{DynamicResource TransparentBrush}"
                                CornerRadius="4"
                                Margin="0 2 0 2">
                            <ContentPresenter x:Name="Content"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль иконки вкладки -->
    <Style x:Key="NavigationTabIcon" TargetType="materialDesign:PackIcon">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Стиль кнопки навигации -->
    <Style x:Key="NavigationButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="12 0"/>
        <Setter Property="Margin" Value="4 2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" 
                            Background="{DynamicResource TransparentBrush}"
                            CornerRadius="4">
                        <ContentPresenter x:Name="Content"
                                        Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MediumBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль иконки в кнопке навигации -->
    <Style x:Key="NavigationButtonIcon" TargetType="materialDesign:PackIcon">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0 0 12 0"/>
    </Style>

    <!-- Стиль текста в кнопке навигации -->
    <Style x:Key="NavigationButtonText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>