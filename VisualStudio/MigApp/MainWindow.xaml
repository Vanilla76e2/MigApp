<Window x:Class="MigApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MigApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MigApp" MinHeight="650" MinWidth="800" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Icon="images\Icon.png" KeyDown="HotKeys">
    <Grid Background="#323232">

        <TabControl TabStripPlacement="Left">

            <!--#region Избранное -->
            <TabItem Height="50" Width="100" Padding="3" Margin="0 10 0 0">
                <TabItem.Header>
                    <Image Source="images/FavImage.png"/>
                </TabItem.Header>

                <Grid>
                    <Border VerticalAlignment="Top" Background="#323232" Height="50">
                        <Grid>
                            <TextBlock Text="Избранное" Style="{DynamicResource Header}" Margin="10 8 0 8"/>
                        </Grid>
                    </Border>

                    <DataGrid Name="FavTable" Background="#525252" Foreground="White" Margin="0 50 5 20" IsReadOnly="True" Sorting="FavSorting" SelectedCellsChanged="SelectedCounter">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать" Click="Fav_Redact"/>
                                <MenuItem Header="Убрать из избранного" Click="Fav_Remove"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                    <TextBlock Text="Выбрано: 0" Name="FavSelectedCount" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="LightGray" Margin="0 0 50 3"/>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region Сотрудники-->
            <TabItem Name="EmployeesGroup" Height="50" Width="100" Padding="3" Margin="0 10 0 0" Visibility="Collapsed">
                <TabItem.Header>
                    <Image Source="images/Employees.png"/>
                </TabItem.Header>
                
                
                <Grid Background="#404040">
                    <TabControl TabStripPlacement="Left">
                        
                        <!--#region Сотрудники-->
                        <TabItem Name="PersonsGroup" Header="Сотрудники" Height="50" Width="100" Padding="3" Margin="0 10 0 0" Visibility="Visible">
                            <Grid Background="#404040">
                                <Border VerticalAlignment="Top" Background="#404040" Height="100">
                                    <Grid>
                                        <StackPanel>
                                            <Grid>
                                                <Button Click="EmployeeCreateClick" Content="➕" HorizontalAlignment="Left" Width="50" Margin="10 0 0 0" Style="{DynamicResource MaterialDesignOutlinedButton}" ToolTip="Создать запись"/>
                                                <TextBlock Text="Сотрудники" Style="{DynamicResource Header}" Margin="70 8 0 8"/>
                                                <Button Click="SEmployee" Content="⌕" FontSize="20" Style="{DynamicResource MaterialDesignFlatButton}" Margin="0 0 5 0" HorizontalAlignment="Right" ToolTip="Поиск"/>
                                            </Grid>
                                            <Border Name="Filter_Emp" Margin="10 5 10 5" BorderThickness="1" BorderBrush="Orange" CornerRadius="3">
                                                <Grid>
                                                    <TextBlock Name="FilterEmpText" FontSize="18" VerticalAlignment="Center" Foreground="White" Margin="5 0 55 0"/>
                                                    <Button Click="FilterEmpClear" Content="✖" Style="{DynamicResource MaterialDesignFlatButton}" HorizontalAlignment="Right" ToolTip="Сбросить фильтр"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <DataGrid Name="EmployeeTable" Margin="0 50 5 20" Background="#525252" Foreground="White" CanUserReorderColumns="False" IsReadOnly="True" SelectedCellsChanged="SelectedCounter" KeyDown="HotKeys">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Копировать" Command="Copy"/>
                                            <Separator/>
                                            <MenuItem Header="В избранное" Click="Fav_Employee"/>
                                            <MenuItem Header="Редактировать" Click="Redact_Employee"/>
                                            <MenuItem Header="Удалить" Click="Delete_Employee"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                </DataGrid>
                                <TextBlock Text="Выбрано: 0" Name="EmpSelectedCount" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="LightGray" Margin="0 0 50 3"/>
                            </Grid>
                        </TabItem>
                        <!--#endregion-->
                        
                        <!--#region Отделы-->
                        <TabItem Name="GroupsGroup" Header="Отделы" Height="50" Width="100" Padding="3" Margin="0 10 0 0" Visibility="Collapsed">
                            <Grid Background="#404040">
                                <Border VerticalAlignment="Top" Background="#404040" Height="100">
                                    <Grid>
                                        <!--Шапка-->
                                        <StackPanel>
                                            <Grid>
                                                <Button Click="GroupCreateClick" Content="➕" HorizontalAlignment="Left" Width="50" Margin="10 0 0 0" Style="{DynamicResource MaterialDesignOutlinedButton}" ToolTip="Создать запись"/>
                                                <TextBlock Text="Отделы" Style="{DynamicResource Header}" Margin="70 8 0 8"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <DataGrid Name="GroupsTable" Margin="0 50 5 20" Background="#525252" Foreground="White" CanUserReorderColumns="False" IsReadOnly="True" SelectedCellsChanged="SelectedCounter">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Копировать" Command="Copy"/>
                                            <Separator/>
                                            <MenuItem Header="Редактировать" Click="Redact_Group"/>
                                            <MenuItem Header="Удалить" Click="Delete_Group"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                </DataGrid>
                                <TextBlock Text="Выбрано: 0" Name="GrSelectedCount" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="LightGray" Margin="0 0 50 3"/>
                            </Grid>
                        </TabItem>
                        <!--#endregion-->
                        
                    </TabControl>
                </Grid>
            </TabItem>
