                                            <Separator/>
                                            <MenuItem Header="В избранное" Click="Fav_PC"/>
                                            <MenuItem Header="Редактировать" Click="Redact_PC"/>
                                            <MenuItem Header="Удалить" Click="Delete_PC"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                </DataGrid>
                                <TextBlock Text="Выбрано: 0" Name="PCSelectedCount" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="LightGray" Margin="0 0 50 3"/>
