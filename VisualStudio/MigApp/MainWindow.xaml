                                            <Separator/>
                                            <MenuItem Header="В избранное" Click="Fav_Notebook"/>
                                            <MenuItem Header="Редактировать" Click="Redact_Notebook"/>
                                            <MenuItem Header="Удалить" Click="Delete_Notebook"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                </DataGrid>
                                <TextBlock Text="Выбрано: 0" Name="NBSelectedCount" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="LightGray" Margin="0 0 50 3"/>
                            </Grid>
