                        <!--#endregion-->

                        <!--#region Роутеры -->
                        <TabItem Name="RouterGroup" Header="Роутеры" Height="50" Width="100" Padding="3" Margin="0 10 0 0" Visibility="Collapsed">

                            <Grid Background="#404040">
                                <Border VerticalAlignment="Top" Background="#404040" Height="100">
                                    <StackPanel>
                                        <Grid>
                                            <Button Click="RoutersCreateClick" Content="➕" HorizontalAlignment="Left" Width="50" Margin="10 0 0 0" Style="{DynamicResource MaterialDesignOutlinedButton}" ToolTip="Создать запись"/>
