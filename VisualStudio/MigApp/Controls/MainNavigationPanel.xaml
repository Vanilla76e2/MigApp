<UserControl x:Class="MigApp.Controls.MainNavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MigApp.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="50">
    
    <DockPanel VerticalAlignment="Stretch" LastChildFill="True">
        <!-- Верхние кнопки -->
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20">
            <ToggleButton Style="{StaticResource NavigationToggleButtonStyle}" 
                          Command="{Binding OpenMenuCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          ToolTip="Меню"
                          Margin="5">
                <materialDesign:PackIcon Kind="Menu" />
            </ToggleButton>

            <ToggleButton Style="{StaticResource NavigationToggleButtonStyle}" 
                          Command="{Binding OpenAdminMenuCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          ToolTip="Админ-меню"
                          Margin="5">
                <materialDesign:PackIcon Kind="Security" />
            </ToggleButton>

            <ToggleButton Style="{StaticResource NavigationToggleButtonStyle}" 
                          Command="{Binding OpenArchiveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                          ToolTip="Архив"
                          Margin="5">
                <materialDesign:PackIcon Kind="Trash" />
            </ToggleButton>
        </StackPanel>

        <!-- Нижние кнопки -->
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20">
            <Button Style="{StaticResource NavigationButtonStyle}" 
                    Command="{Binding OpenSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    ToolTip="Настройки">
                <materialDesign:PackIcon Kind="Cog" />
            </Button>

            <Button Style="{StaticResource NavigationButtonStyle}" 
                    Command="{Binding OpenHelpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    ToolTip="Руководство">
                <materialDesign:PackIcon Kind="HelpCircle" />
            </Button>

            <Button Style="{StaticResource NavigationButtonStyle}" 
                    Command="{Binding LogoutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    ToolTip="Выход">
                <materialDesign:PackIcon Kind="LogoutVariant" />
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>
