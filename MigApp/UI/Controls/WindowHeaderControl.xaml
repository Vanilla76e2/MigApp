<UserControl x:Class="MigApp.UI.Controls.WindowHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MigApp.UI.Controls"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Margin="0 5 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Логотип -->
        <!--<Image Source="/Images/MigAppLogo.svg" Visibility="{Binding HasIcon, ElementName=root, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10 4 0 4"/>-->

        <Image Source="{DynamicResource di_MigAppLogo_xaml}" 
               Visibility="{Binding HasIcon, ElementName=root, 
            Converter={StaticResource BooleanToVisibilityConverter}}" 
               Margin="25 5 0 5"/>


        <!-- Название окна -->
        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                   Style="{Binding TitleStyle, ElementName=root}" 
                   VerticalAlignment="Center" 
                   Margin="20 0 0 0"
                   Grid.Column="1"/>

        <TextBlock Text="{Binding SubTitleText, ElementName=root}" 
                   Style="{Binding SubTitleStyle, ElementName=root}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="16 0"
                   Grid.Column="2"/>
        
        <!-- Кнопки управления окном -->
        <ContentControl Grid.Column="3">
            <local:WindowButtonsControl WindowChrome.IsHitTestVisibleInChrome="True" Margin="0 0 5 0" HorizontalAlignment="Right"
                                        MinimizeButtonStyle="{DynamicResource WindowMinimizeButtonStyle}"
                                        MaximizeButtonStyle="{DynamicResource WindowMaximizeButtonStyle}"
                                        CloseButtonStyle="{DynamicResource WindowCloseButtonStyle}"
                                        InfoButtonStyle="{DynamicResource WindowInfoButtonStyle}"/>
        </ContentControl>
    </Grid>
</UserControl>
