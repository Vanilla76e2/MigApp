<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!--                                    ЦВЕТА                                       -->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    
    <Color x:Key="Primary"> #FF9700 </Color>
    <Color x:Key="PrimaryOverlay"> #33DD9700 </Color>
    <Color x:Key="Surface1"> #525252 </Color>
    <Color x:Key="Surface2"> #424242 </Color>
    <Color x:Key="Surface3"> #323232 </Color>
    <Color x:Key="Surface4"> #252525 </Color>
    <Color x:Key="DatagridBackGround"> #505050 </Color>
    <Color x:Key="Row"> #424242 </Color>
    <Color x:Key="RowAlter"> #323232 </Color>
    <Color x:Key="Foreground"> White </Color>
    <Color x:Key="ForegroundInactive"> Gray </Color>
    <Color x:Key="Foreground2"> DarkGray </Color>
    <Color x:Key="AltForeground"> Black </Color>
    <Color x:Key="Shadow">#252525</Color>
    <Color x:Key="WindowBorder"> #454545 </Color>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!--                                    КИСТИ                                       -->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryOverlayBrush" Color="{DynamicResource PrimaryOverlay}"/>
    <SolidColorBrush x:Key="Surface1Brush" Color="{DynamicResource Surface1}"/>
    <SolidColorBrush x:Key="Surface2Brush" Color="{DynamicResource Surface2}"/>
    <SolidColorBrush x:Key="Surface3Brush" Color="{DynamicResource Surface3}"/>
    <SolidColorBrush x:Key="Surface4Brush" Color="{DynamicResource Surface4}"/>
    <SolidColorBrush x:Key="DatagridBackgroundBrush" Color="{DynamicResource DatagridBackGround}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{DynamicResource Foreground}"/>
    <SolidColorBrush x:Key="ForegroundInactiveBrush" Color="{DynamicResource ForegroundInactive}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{DynamicResource Shadow}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="RowBrush" Color="{DynamicResource Row}"/>
    <SolidColorBrush x:Key="RowAlterBrush" Color="{DynamicResource RowAlter}"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{DynamicResource WindowBorder}"/>
    <SolidColorBrush x:Key="AltForegroundBrush" Color="{DynamicResource AltForeground}"/>

</ResourceDictionary>