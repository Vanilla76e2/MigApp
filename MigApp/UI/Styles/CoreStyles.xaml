<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!--                           Шрифты                              -->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    
    <FontFamily x:Key="BaseFontFamily"> Segoe UI </FontFamily>

    <system:Double x:Key="FontSizeSmall"> 14 </system:Double>
    <system:Double x:Key="FontSizeNormal"> 20 </system:Double>
    <system:Double x:Key="FontSizeLarge"> 24 </system:Double>
    
    <FontWeight x:Key="FontWeightRegular"> Regular </FontWeight>
    <FontWeight x:Key="FontWeightBold"> Bold </FontWeight>
    <FontWeight x:Key="FontWeightSemiBold"> SemiBold </FontWeight>
    <FontWeight x:Key="FontWeightThin"> Thin </FontWeight>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!--                          Отступы                              -->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <Thickness x:Key="ThicknessNone">0</Thickness>
    <Thickness x:Key="ThicknessEdge">1</Thickness>
    <Thickness x:Key="ThicknessSmall">4</Thickness>
    <Thickness x:Key="ThicknessNormal">8</Thickness>
    <Thickness x:Key="ThicknessLarge">16</Thickness>

    <CornerRadius x:Key="CornerRadiusSmall">2</CornerRadius>
    <CornerRadius x:Key="CornerRadiusNormal">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="TopCornerRadiusLarge">8 8 0 0</CornerRadius>
    <CornerRadius x:Key="BottomCornerRadiusLarge">0 0 8 8</CornerRadius>
    

    <system:Double x:Key="ControlHeightSmall">30</system:Double>
    <system:Double x:Key="ControlHeightNormal">40</system:Double>
    <system:Double x:Key="ControlHeightTall">50</system:Double>

</ResourceDictionary>