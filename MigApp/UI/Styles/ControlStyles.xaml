    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!--                        LabeledInput                           -->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <Style x:Key="LabeledInputBase" TargetType="controls:LabeledInput">
        <!-- Общие отступы и размер -->
        <Setter Property="Margin" Value="0 8" />
        <Setter Property="LabelWidth" Value="100" />
        <Setter Property="GapWidth" Value="12" />
        <Setter Property="InputWidth" Value="100" />
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="LabelHorizontalAlignment" Value="Left" />
        <Setter Property="InputHorizontalAlignment" Value="Stretch" />

        <!-- Можно заранее указать размер шрифта (опционально) -->
        <Setter Property="FontFamily" Value="{DynamicResource BaseFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
    </Style>

</ResourceDictionary>